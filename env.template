# Enhanced environment variables template
# Copy this file to .env and fill in your values

# Required: Telegram Bot Configuration
API_ID=your_telegram_api_id_here
API_HASH=your_telegram_api_hash_here
BOT_TOKEN=your_bot_token_here

# Optional: Bot Configuration
BOT_PREFIX=/
ADMIN_IDS=your_user_id_here,another_admin_id
FORCE_SUB_CHANNEL=@your_channel

# Optional: External Services
BROWSERLESS_TOKEN=your_browserless_token_for_replit
REDIS_URL=redis://localhost:6379/0

# Optional: Database Configuration
DATABASE_URL=sqlite:///bot_stats.db
# For PostgreSQL: postgresql://user:password@localhost/pinfairy
# For MySQL: mysql://user:password@localhost/pinfairy

# Optional: Bot Behavior
DAILY_QUOTA=100
RATE_LIMIT_SECONDS=3
MAX_BOARDS_PER_REQUEST=5

# Optional: Logging
LOG_LEVEL=INFO

# Optional: Feature Flags
FEATURE_AUTO_DETECT=true
FEATURE_BOARD_DOWNLOAD=true
FEATURE_VIDEO_DOWNLOAD=true
FEATURE_SEARCH_FUNCTIONALITY=true
FEATURE_USER_PROFILES=true
FEATURE_LEADERBOARD=true
FEATURE_FEEDBACK_SYSTEM=true
FEATURE_ADMIN_PANEL=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_RATE_LIMITING=true
FEATURE_QUOTA_SYSTEM=true

# Optional: Monitoring (for Docker Compose)
GRAFANA_PASSWORD=your_grafana_password